<Application x:Class="kartkowkaWpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:kartkowkaWpf"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="10"/>
            <Style.Triggers>
                <Trigger Property="Content" Value="1">
                    <Setter Property="Background" Value="Crimson"/>
                </Trigger>
                <Trigger Property="Content" Value="2">
                    <Setter Property="Background" Value="Blue"/>
                </Trigger>
                <Trigger Property="Content" Value="3">
                    <Setter Property="Background" Value="Orange"/>
                </Trigger>
                <Trigger Property="Content" Value="4">
                    <Setter Property="Background" Value="Green"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
