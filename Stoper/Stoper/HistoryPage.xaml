<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stoper.HistoryPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <CollectionView x:Name="history">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <StackLayout Orientation="Horizontal" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
                            <Label Text="{Binding Id}" FontSize="Caption" HorizontalOptions="Center" />
                            <Label Text="{Binding LapTime}" FontSize="Title" HorizontalOptions="CenterAndExpand"/>
                            <Label Text="{Binding Date, StringFormat='{0:dd MMMM yyyy, dddd}'}" FontSize="Subtitle" HorizontalOptions="CenterAndExpand" VerticalOptions="End"/>
                        </StackLayout>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>